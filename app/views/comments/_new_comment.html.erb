<div class="col-md-12">
	<%= form_for [@article, @comment], :html => {class: "form-horizontal", role: "form"} do |f| %>
	<% if @comment.errors.any? %>
		<div class="panel panel-danger offset-md-1">
			<div class="card card-inverse card-danger">
			  <div class="card-block">
				  <h4 class="card-title">
					  <%= pluralize(@comment.errors.count, "errors") %> has prevented this from getting saved:
				  </h4>
					<% @comment.errors.full_messages.each do |message| %>
						<p class="card-text"><%= message %></p>
					<% end %>
			  </div>
			</div>
		</div>
	<% end %>
        <div class="form-group">
          <div class="control-label col-md-2">
            <%= f.label :body, "New Comment" %>
          </div>  
          <div class="col-md-10">
            <%= f.text_area :body, rows: 10, class:"form-control", placeholder: "Your comments", autofocus: true %>
          </div>
		</div>
        <div class="form-group">
          <div class="col-md-offset-4 col-md-6">
            <%= f.submit "Add comment", class:"btn btn-primary pull-right" %>
          </div>
        
        </div>
	<% end %>
</div>