<h1>Articles</h1>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>
  <% @articles.each do |article| %>
  <tr>
    <td>
      <%= article.title %>
    </td>
    <td>
      <%= article.body %>
    </td>
  </tr>
  <% end %>
  
</table>

<%= link_to 'New Article', new_article_path %>
